<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MakersMarktE5.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MakersMarktE5"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#e4e0cf">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350" Spacing="20" Background="#5e341a" Padding="20" BorderBrush="Transparent" CornerRadius="5">
            <TextBox FontSize="18" x:Name="usernameTextBox" Header="Username" Width="auto"/>
            <PasswordBox FontSize="18" x:Name="passwordTextBox" Header="Password" Width="auto"/>
            <TextBlock FontSize="18" x:Name="ErrorTextBlock" Foreground="Red"/>
            <StackPanel Orientation="Horizontal" Spacing="50" HorizontalAlignment="Center">
                <Button x:Name="LoginButton" Click="LoginButton_Click" Content="Login" Width="125"/>
                <Button x:Name="RegisterButton" Click="RegisterButton_Click" Content="Register" Width="125"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
